<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script>
function setLanguage(lang) {
  document.querySelectorAll('.lang-block').forEach(b => b.classList.remove('active'));
  document.getElementById(lang).classList.add('active');
}

async function savePDF() {
  const { jsPDF } = window.jspdf;
  const doc = new jsPDF({ unit: 'mm', format: 'a4', orientation: 'portrait' });

  const name = 'Jonathan Fl√≥rez Pulido';
  const role = 'Mesero Profesional Triling√ºe | Especialista en Servicio de Alta Gastronom√≠a | Sommelier';
  const contact = '+57 321 963 2121 | jfp.pmp@gmail.com | Bogot√°, Colombia';
  let y = 20;

  doc.setFont("helvetica", "bold");
  doc.setFontSize(14);
  doc.text(name, 20, y);
  y += 6;
  doc.setFont("helvetica", "normal");
  doc.setFontSize(11);
  doc.text(role, 20, y);
  y += 5;
  doc.setFontSize(9);
  doc.setTextColor(60);
  doc.text(contact, 20, y);
  y += 8;
  doc.setTextColor(0);

  const text = document.querySelector('.lang-block.active').innerText.split('\n');
  text.forEach(line => {
    const split = doc.splitTextToSize(line, 170);
    doc.text(split, 20, y);
    y += split.length * 4;
    if (y > 280) { doc.addPage(); y = 20; }
  });

  doc.save("CV_Jonathan_Florez_Mesero.pdf");
}
</script>
